{
  "expo": {
    "name": "FoodGuard",
    "slug": "foodguard-app",
    "version": "0.1.0",
    "owner": "hgregoire",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "foodguard",
    "privacy": "public",
    "description": "Check product recalls from official government sources. Scan barcodes or search products to ensure food safety.",
    "primaryColor": "#007bff",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#007bff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gregware.foodguard",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "FoodGuard uses your camera to scan product barcodes.",
        "CFBundleDisplayName": "FoodGuard"
      }
    },
    "android": {
      "package": "com.gregware.foodguard",
      "versionCode": 1,
      "permissions": ["CAMERA"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#007bff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
    }
  }
}
